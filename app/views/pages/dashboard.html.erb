<div class="container">
  <h2>My Current Bookings</h2>
  <div class="booking-content">
    <div class="row">
      <% @bookings.each do |booking| %>
        <div class="col-md-4">
          <div class="mini-card">
              <% if booking.mooring.name.include? "Camden" %>
                <div class="image-container" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)),
                 url(<%= image_path('Camden_Lock.jpg') %>)">
                  <h4><%= booking.mooring.name %></h4>
                </div>
              <% elsif booking.mooring.name.include? "Paddington" %>
                <div class="image-container" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)),
                 url(<%= image_path('Paddington.jpg') %>)">
                  <h4><%= booking.mooring.name %></h4>
                </div>
              <% elsif booking.mooring.name.include? "Angel" %>
                <div class="image-container" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)),
                 url(<%= image_path('Angel.jpg') %>)">
                  <h4><%= booking.mooring.name %></h4>
                </div>
              <% elsif booking.mooring.name.include? "Broadway Market" %>
                <div class="image-container" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)),
                 url(<%= image_path('Broadway_market.jpg') %>)">
                  <h4><%= booking.mooring.name %></h4>
                </div>
              <% end %>
            <div class="dates-container">
              <p> <strong>Start: </strong><%= booking.start_date %></p>
              <p><strong>End: </strong><%= booking.end_date %></p>
            </div>
            <div class="buttons-booking-container">
              <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_booking_path(booking) %>
              <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, booking_path(booking), method: :delete %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% @bookings.each do |booking| %>
      <div class="mini-card">
      <h4><%= booking.mooring.name %></h4>
        <div class="image-container">
          <% if booking.mooring.name.include? "Camden" %>
            <%= image_tag("Camden_Lock.jpg", :alt => "camden", :class => "booking-avatar") %>
          <% elsif booking.mooring.name.include? "Paddington" %>
            <%= image_tag("Paddington.jpg", :alt => "paddington", :class => "booking-avatar") %>
          <% elsif booking.mooring.name.include? "Angel" %>
            <%= image_tag("Angel.jpg", :alt => "angel", :class => "booking-avatar") %>
          <% elsif booking.mooring.name.include? "Broadway Market" %>
            <%= image_tag("Broadway_market.jpg", :alt => "broadway market", :class => "booking-avatar") %>
          <% end %>
        </div>
        <div>
          <p>Booking dates</p>
          <p> <strong>Start: </strong><%= booking.start_date %></p>
          <p><strong>End: </strong><%= booking.end_date %></p>
        </div>
        <div class="buttons-booking-container">
          <%= link_to "Edit", edit_booking_path(booking), class: "btn btn-primary"%>
          <%= link_to "Delete", booking_path(booking), method: :delete, class: "btn btn-danger"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
