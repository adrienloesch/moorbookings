<div class="dashboard-container">
  <h2>My Current Bookings</h2>
  <div class="booking-content">
    <% @bookings.each do |booking| %>
      <div class="mini-card">
        <p>
          <%= booking.mooring.name %>
        </p>
        <p>
          Booking dates: <%= booking.start_date %> to <%= booking.end_date %>
        </p>
        <%= link_to "Edit", edit_booking_path(booking), class: "btn btn-primary"%>
        <%= link_to "delete", booking_path(booking), method: :delete, class: "btn btn-danger"%>
      </div>
    <% end %>
  </div>
</div>





